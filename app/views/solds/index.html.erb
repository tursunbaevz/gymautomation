<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="wrap">
    <h1>История продаж</h1>

    <table class="table table-sm">
      <thead>
        <tr>
          <th>Колличество продуктов</th>
          <th>Дата продажи</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @solds.each do |sold| %>
          <tr>
            <td><%= sold.sold_quantity %></td>
            <td><%= sold.sold_date %></td>
            <td><%= link_to 'показать', sold %></td>
            <td><%= link_to '', edit_sold_path(sold), class: 'fa fa-pencil btn btn-primary' %>
            <%= link_to '', sold, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash-o btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>