<p id="notice"><%= notice %></p>

<div class="wrap">
  <h1>Платежи</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Сумма </th>
        <th>Дата оплаты</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.debt %></td>
          <td><%= payment.payment_date %></td>
          <td><%= link_to '', edit_payment_path(payment), class: 'fa fa-pencil btn btn-primary' %>
          <%= link_to '', payment, method: :delete, data: { confirm: 'Are you sure?' },  class: 'fa fa-trash-o btn btn-danger'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Добавить цену', new_payment_path %>
</div>